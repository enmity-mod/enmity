{
  "compilerOptions": {
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2022",
    "resolveJsonModule": true,
    "module": "es2022",
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@core": [
        "core/index.ts"
      ],
      "@metro": [
        "modules/metro/index.ts"
      ],
      "@utilities": [
        "modules/utilities/index.ts"
      ],
      "@patcher": [
        "modules/patcher/index.ts"
      ],
      "@api": [
        "api/index.ts"
      ],
      "@components": [
        "components/index.ts"
      ],
      "@metro/*": [
        "modules/metro/*"
      ],
      "@data/*": [
        "data/*"
      ],
      "@utilities/*": [
        "modules/utilities/*"
      ],
      "@patcher/*": [
        "modules/patcher/*"
      ],
      "@api/assets": [
        "api/assets.ts"
      ],
      "@api/*": [
        "api/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@managers/*": [
        "managers/*"
      ],
      "@screens/*": [
        "core/screens/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@core/*": [
        "core/*"
      ]
    }
  }
}